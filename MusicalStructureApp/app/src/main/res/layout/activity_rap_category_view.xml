<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RapCategoryView"
    android:background="@drawable/pr_source"
    android:orientation="vertical"
    android:padding="8dp"
    >
    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rap_playing_butt"
            android:background="@drawable/rounded_background"
            android:text="@string/playing"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:onClick="GoToPlayingNowFromRap"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rap_back_home__butt"
            android:background="@drawable/rounded_background"
            android:text="@string/back2home"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:onClick="Back2Home"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/rap_category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>